doctype html
html
  head
    title Inicio de sesión
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel='stylesheet', href='/css/formStyles.css')
    link(rel='apple-touch-icon' sizes='180x180' href='../images/favicon/apple-touch-icon.png')
    link(rel='icon' type='image/png' sizes='32x32' href='../images/favicon/favicon-32x32.png')
    link(rel='icon' type='image/png' sizes='16x16' href='../images/favicon/favicon-16x16.png')
    link(rel='manifest' href='../images/favicon/site.webmanifest')
    link(rel='mask-icon' href='../images/favicon/safari-pinned-tab.svg' color='#5bbad5')
    meta(name='msapplication-TileColor' content='#da532c')
    meta(name='theme-color' content='#ffffff')
  body
    block content
      .login-container
        h1(class='title') #{title}

        form(action='/login' method='POST' class='login-form')
          .form-group
            label(for='username' class='form-label') Usuario
            input(type='text' name='username' id='username' placeholder='Usuario' class='form-input', required)

          .form-group
            label(for='password' class='form-label') Contraseña

          .contrasena-container
            input(type='password' name='password' id='password' placeholder='Contraseña' class='form-input', required)
            button(type='button' id='mostrarContrasena') Mostrar

          .form-group
            button(type='submit' class='submit-button') Iniciar sesión

        .reg-container
          p ¿No tienes cuenta?
            a(href='/registro' class='register-link') ¡Regístrate!
    
        .reg-container
          span 
            a(href='/' class='register-link') Regresar al inicio

        script.
          const inputContraseña = document.getElementById('password');
          const botonContraseña = document.getElementById('mostrarContrasena');

          botonContraseña.addEventListener('click', () => {
            if (inputContraseña.type === 'password') {
                inputContraseña.type = 'text';
                botonContraseña.innerHTML = '<i>Ocultar</i>';
            } else {
                inputContraseña.type = 'password';
                botonContraseña.innerHTML = '<i>Mostrar</i>';
            }
          });